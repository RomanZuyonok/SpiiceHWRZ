<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.H1_big">
        <item name="android:textSize">100sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.H1">
        <item name="android:textSize">52sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.H2">
        <item name="android:textSize">31.25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.H3">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.H4">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.P">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextStyle.P_small">
        <item name="android:textSize">12.8sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:backgroundTint">#9378FF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">6dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">4dp</item>
    </style>
</resources>